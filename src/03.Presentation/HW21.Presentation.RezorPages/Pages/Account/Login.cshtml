@page
@model HW21.Presentation.RezorPages.Pages.Account.LoginModel
@{
}
<head>
    <link rel="stylesheet" href="~/css/Login.css">
</head>

<div class="container">
    <div class="card">
        <h2 id="login-title">ورود به حساب</h2>

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Username">نام کاربری</label>
                <input asp-for="Username" type="text" placeholder="مثلاً: sara" required />
            </div>

            <div class="form-group">
                <label asp-for="Password">رمز عبور</label>
                <input asp-for="Password" type="password" placeholder="رمزتان را وارد کنید" required />
            </div>

            <button class="btn" type="submit">ورود</button>
            <p class="note">حساب کاریری ندارید؟ <a asp-page="Register">‌ثبت نام کنید</a></p>
        </form>
        <div class="message-box">
            <p>
                @Model.Message
            </p>
        </div>
    </div>
</div>